@{
    ViewData["Title"] = "Produtos";
}

<div class="panel">
    <div class="panel-header d-flex align-content-center justify-content-between">
        <h3>Adicionar novo produto</h3>
        <div class="d-flex">
            <a class="btn btn-primary me-2" href="Admin/Product/Create">
                <span class="iconify" data-icon="fluent:save-20-filled" data-width="20" data-height="20"></span>
                Salvar
            </a>
            <a class="btn btn-secondary" href="Admin/Product/Create">
                <span class="iconify" data-icon="fluent:save-edit-20-filled" data-width="20" data-height="20"></span>
                Salvar e cotinuar editando
            </a>
        </div>
    </div>

    <div class="panel-body">
        <form>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-sm-end">Publicado</label>
                <div class="col-sm-8 d-flex align-items-center">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" />
                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-sm-end">Nome</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-sm-end">Descrição resumida</label>
                <div class="col-sm-8">
                    <textarea class="form-control" type="text"></textarea>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-sm-end">Descrição completa</label>
                <div class="col-sm-8">
                    <textarea class="form-control" type="text"></textarea>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-sm-end">SKU</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-sm-end">GTIN</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <h1 class="display-4">Loja Simplificada</h1>
</div>
