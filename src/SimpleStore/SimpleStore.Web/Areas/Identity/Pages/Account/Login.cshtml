@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}
<div class="row d-flex justify-content-center">
    <div class="col-auto">
        <div class="page-panel p-2 p-lg-3">
            <form id="account" method="post">
                <h2>Entrar.</h2>
                <hr />
                <h4>Digite os dados da sua conta.</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-2">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 d-none">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>

                <div class="form-group mb-2">
                    <button type="submit" class="btn btn-primary text-white me-2">Entrar</button>
                    <a class="btn btn-light" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Criar uma conta</a>
                </div>

                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
